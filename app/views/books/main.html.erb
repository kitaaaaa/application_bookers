<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>

<table>
	<h1>Books</h1>
	<thead>
	 <tr>
		<th>Title</th>
		<th>Body</th>
		<td colspan="3"></td>
	 </tr>
	</thead>


 <% @books.each do |book| %>
<tr>
	<td><span><%= book.title %></span></td>
	<td><span><%= book.body %></span></td>
	<th class="link" color="black">
		<a><%=link_to 'show', book_path(book.id) %></a>
		<a><%=link_to 'Edit', edit_book_path(book.id) %></a>
		<a>
			<%=link_to 'Destroy', destroy_book_path(book.id), method: :delete, data:
			{ confirm: 'Are you sure?'
			} %>
		</a>
	</th>
</tr>
 <% end %>


</table>


	<h2>New book</h2>
<%= form_for(@book) do |f| %>

	<p>Title</p>
	<%= f.text_field :title %>

	<p>Body</p>
	<%= f.text_area :body %>
	<br>
	<%= f.submit 'create book' %>

<% end %>